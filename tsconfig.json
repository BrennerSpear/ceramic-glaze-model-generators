{
    "compilerOptions": {
        "target": "es2018",
        "module": "CommonJS",
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
